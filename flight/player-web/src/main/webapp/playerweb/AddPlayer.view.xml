<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" controllerName="playerweb.AddPlayer" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<Page title="AddPlayer" id="page" showNavButton="true"
		navButtonPress="handleNavButtonPress">
		<l:Grid defaultSpan="L12 M12 S12" width="auto">
			<l:content>
				<f:SimpleForm id="PlayerAdd" minWidth="1024"
					maxContainerCols="2" editable="true" layout="ResponsiveGridLayout"
					title="Player Add" labelSpanL="3" labelSpanM="3" emptySpanL="4"
					emptySpanM="4" columnsL="1" columnsM="1" class="editableForm">
					<f:content>
						<Input id="id" value="{Id}" visible="false" />
						<Label text="Departure" />
						<Input id="departure" value="{Departure}" />
						<Label text="Destination" />
						<Input id="destination" value="{Destination}">
						</Input>
					</f:content>
				</f:SimpleForm>
			</l:content>
		</l:Grid>
		<footer>
			<Bar>
				<contentRight>
					<Button id="save" text="Save" type="Emphasized" press="handleSavePress" />
					<Button id="delete" text="Delete" press="handleDeletePress" />
					<Button id="cancel" text="Cancel" press="handleCancelPress" />
				</contentRight>
			</Bar>
		</footer>
	</Page>
</core:View>